<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @picture.content %>
</p>
<p>
  <strong>Image:</strong>
  <%= image_tag @picture.image.url  %>
</p>

<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'Not a favorite', favorite_path(id: @favorite.id), method: :delete, class:'btn btn-danger' %>
  <% else %>
    <%= link_to 'Favorite', favorites_path(picture_id: @picture.id), method: :post, class:'btn btn-primary'%>
  <% end %>
  <% end %>
<% if logged_in? && @picture.user_id == current_user.id %>
  <button type="button" class="btn btn-success btn-sm"><%= link_to 'Edit', edit_picture_path(@picture) %></button>
  <button type="button" class="btn btn-danger btn-sm"><%= link_to 'Delete', @picture, method: :delete, data: { confirm: 'Are you sure?' } %></button>
<% end %>

<button type="button" class="btn btn-dark btn-sm"><%= link_to 'Back', pictures_path %></button>
