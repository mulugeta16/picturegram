<%= form_with(model: @user, local: true) do |form| %>
<% if @user.errors.any? %>
	<div id="error_explanation">
		<h2><%= @user.errors.count%>From the error<%= @user.name if @user.name %><%= "User"  if @user.name.empty? %>Could not be registered.</h2>
		<ul>
		<% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
		<% end %>
		</ul>
	</div>
<% end %>

  <div class="field">
  <%= form.label :name %>
  <%= form.text_field :name %>
</div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password_digest %>
    <%= form.text_field :password_digest %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
